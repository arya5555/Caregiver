<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/listview_parent_h"
    android:background="@color/bkgd_dgrey"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/groupimg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/listview_image_padding_e"
        android:paddingStart="@dimen/listview_image_padding_s"
        android:src="@drawable/ic_home_black" />

    <TextView
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|start"
        android:text="Test"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

</LinearLayout>